<%
    if Redcase::System.rails2?
        form_for :node, @node, :remote => true do |f|
%>
            <%= f.hidden_field :parent_id, :value => @node.parent.id %>
            <%= f.label :name %>:
            <%= f.text_field :name  %>
            <%= f.submit "", :class => 'icon-add', :style => "width: 20px" %>
<%
        end
    else
%>
        <%= eval(Redcase::System.rails2? ? 'begin' : 'form_for  @node, :remote => true do |f|') %>
            <%= f.hidden_field :parent_id, :value => @node.parent.id %>
            <%= f.label :name %>:
            <%= f.text_field :name  %>
            <%= f.submit "", :class => 'icon-add', :style => "width: 20px" %>
        <% eval('end') %>
<%
    end
%>