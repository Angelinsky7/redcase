// Hidding modal dialog
hideModal("modalDiv");
// Removing form to avoid duplicates
$$("#modalDiv form").first().remove();

var childs = $('<%= "#{@node.class}:#{@node.id}" %>').firstDescendant().childElements();
for(var i=0; i<childs.length; i++) {
    if(childs[i].hasClassName('node-name')) {
        childs[i].update('<%= @node.name %>');
        break;
    }
}

