<% remote_form_for :redcase_test_suite, @node, :url => { :controller => 'redcase_test_suites', :action => 'update' }, :method => :put do |f| %>
    <%= f.hidden_field :parent_id, :value => @node.parent.id %>
    <%= f.label :name %>:
    <%= f.text_field :name  %>
    <%= f.submit " ", :type => :image, :src => '/images/true.png' %>
    <br>
    <%= errors_par %>
<% end %>