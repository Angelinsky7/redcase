        </li>
        <li>
            <%= link_to l(:redcase_i18n_delete), { :controller => 'redcase_test_suites', :action => 'destroy', :id => @node },
                    :class => 'icon-del', :remote => true, :confirm => '', :method => :delete %>
        </li>        
    <% end %>
</ul>