<ul>
    <li>
        <%= link_to "Add", { :controller => 'redcase_test_suites', :action => 'new', :parent_id => @node },
                :class => 'icon-add', :remote => true %>
    </li>
    <% unless @node.builtin? %>
        <li>
            <%= link_to "Rename", { :controller => 'redcase_test_suites', :action => 'edit', :id => @node },
