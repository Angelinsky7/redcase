<ul>
    <li>
        <%=
            if Redcase::System.rails3?
                link_to "Add",
                        { :controller => 'redcase_test_suites', :action => 'new', :parent_id => @node },
                        :class => 'icon-add',
                        :remote => true
            else
                link_to_remote "Add",
                               :url => { :controller => 'redcase_test_suites', :action => 'new', :parent_id => @node },
                               :class => 'icon-add', 
                               :method => 'get'
            end
        %>
    </li>
<% unless @node.builtin? %>
    <li>
        <%=
            if Redcase::System.rails3?
                link_to "Rename",
                        { :controller => 'redcase_test_suites', :action => 'edit', :id => @node },
                        :class => 'icon-edit',
                        :remote => true
            else
                link_to_remote "Rename",
                               :url => { :controller => 'redcase_test_suites', :action => 'edit', :id => @node },
                               :class => 'icon-edit',
                               :method => 'get',
                               :complete => 'eval(request.data)'
            end
        %>
    </li>
    <li>
        <%=
            if Redcase::System.rails3?
                link_to l(:redcase_i18n_delete),
                        { :controller => 'redcase_test_suites', :action => 'destroy', :id => @node },
                        :class => 'icon-del',
                        :remote => true,
                        :confirm => 'Yes?',
                        :method => :delete
            else
                link_to_remote l(:redcase_i18n_delete),
                               :url => { :controller => 'redcase_test_suites', :action => 'destroy', :id => @node },
                               :class => 'icon-del',
                               :confirm => 'Yes?',
                               :method => 'delete'
            end
        %>
    </li>
<% end %>
</ul>